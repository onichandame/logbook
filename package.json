{
  "name": "@onichandame/logbook",
  "private": true,
  "version": "0.0.0",
  "description": "logbook for everyday",
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "build:libs": "lerna --scope @libs/* run build",
    "test:libs": "lerna --scope @libs/* run test",
    "pretest:apps": "npm run build:libs",
    "test:apps": "lerna --scope @apps/* run test",
    "pretest": "npm run build:libs",
    "test": "lerna run test",
    "dev:proxy": "lerna --scope @apps/proxy run dev",
    "dev:frontend": "lerna --scope @apps/frontend run dev",
    "dev:backend": "lerna --scope @apps/backend run dev",
    "predev": "npm run build:libs",
    "dev": "concurrently \"cross-env PORT=3000 cross-env BACKEND_PORT=3002 cross-env FRONTEND_PORT=3001 npm run dev:proxy\" \"cross-env PORT=3002 npm run dev:backend\" \"cross-env PORT=3001 npm run dev:frontend\"",
    "prepare": "husky install",
    "format": "pretty-quick --staged"
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onichandame/logbook.git"
  },
  "keywords": [
    "nestjs",
    "react"
  ],
  "author": "onichandame",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onichandame/logbook/issues"
  },
  "homepage": "https://github.com/onichandame/logbook#readme",
  "devDependencies": {
    "@jest/types": "^27.0.2",
    "@nestjs/testing": "^7.6.18",
    "@nestjs/typeorm": "^7.1.5",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {}
}
